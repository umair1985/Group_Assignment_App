<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Client Update Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #00aaff;
      color: black;
      text-align: center;
    }

    .container {
      margin-top: 20px;
    }

    h1,
    h2 {
      margin-bottom: 20px;
    }

    form {
      display: inline-block;
      text-align: left;
      margin: 0 auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
    }

    label,
    input,
    select {
      display: block;
      margin: 10px 0;
      width: 100%;
    }

    table {
      width: 80%;
      margin: 20px auto;
      background-color: white;
      border-collapse: collapse;
    }

    th,
    td {
      padding: 10px;
      border: 1px solid black;
      text-align: center;
    }

    button {
      padding: 10px 20px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
  >
</head>

<body>
  <div class="container">
    <h1>Client Update Form</h1>
    <form id="updateForm">
      <label for="clientno">Add Client Number(s) to update information:</label>
      <select id="clientno" required>
        <% clients.forEach(client=> { %>
          <option value="<%= client %>">
            <%= client %>
          </option>
          <% }); %>
      </select><br />

      <label for="telno">Telephone Number:</label>
      <input type="text" id="telno" /><br />

      <label for="street">Street:</label>
      <input type="text" id="street" /><br />

      <label for="city">City:</label>
      <input type="text" id="city" /><br />

      <label for="email">Email:</label>
      <input type="email" id="email" /><br />

      <div class="button-group">
        <button type="button" class="add" onclick="addClientUpdate()">Add</button>
        <button type="submit" class="submit">Submit</button>
      </div>

      <h2>Client Information</h2>
      <table id="clientTable" border="1">
        <thead>
          <tr>
            <th>Client Num</th>
            <th>Name</th>
            <th>Telephone Num</th>
            <th>Street</th>
            <th>City</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <!-- Rows added dynamically -->
        </tbody>
      </table>
    </form>

    <script>
      document.getElementById('updateForm').addEventListener('submit', async function (event) {
        event.preventDefault();
        const table = document.getElementById('clientTable').getElementsByTagName('tbody')[0];
        const rows = table.getElementsByTagName('tr');
        console.log("rows:" + rows.length);
        const data = [];

        for (let i = 0; i < rows.length; i++) {
          const cells = rows[i].getElementsByTagName('td');
          const client = {
            clientNo: cells[0].innerText,
            telno: cells[2].innerText,
            street: cells[3].innerText,
            city: cells[4].innerText,
            email: cells[5].innerText
          };
          console.log("client:" +client);
          data.push(client);
        }

        try {
          const response = await fetch('/updateClient ', {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });

          const result = await response.json();

          if (result.success) {
            alert(result.message);
          } else {
            alert(result.message);
          }
          window.location.reload();
        } catch (error) {
          console.error('Error:', error);
        }
      });

      async function addClientUpdate() {
        const clientno = document.getElementById("clientno").value;
        const telno = document.getElementById("telno").value || null;
        const street = document.getElementById("street").value || null;
        const city = document.getElementById("city").value || null;
        const email = document.getElementById("email").value || null;

        const response = await fetch("/addClientUpdate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ clientno, telno, street, city, email }),
        });

        if (response.ok) {
          const data = await response.json();
          const tableBody = document.getElementById("clientTable").querySelector("tbody");
          const row = document.createElement("tr");

          row.innerHTML = `
                        <td>${data.clientno}</td>
                        <td>${data.name}</td>
                        <td>${data.telno || "N/A"}</td>
                        <td>${data.street || "N/A"}</td>
                        <td>${data.city || "N/A"}</td>
                        <td>${data.email || "N/A"}</td>
                    `;

          tableBody.appendChild(row);

          document.getElementById("updateForm").reset();
        } else {
          alert(
            "Error adding client. Please check the details and try again."
          );
        }
      }
    </script>

  </div>
</body>

</html>